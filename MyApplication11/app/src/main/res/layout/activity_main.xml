<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity0" >

   <ScrollView
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true">

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:background="#C8E4E8"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:background="#C8E4E8"
               android:gravity="center"
               android:orientation="vertical">


               <ImageView
                   android:layout_width="130dp"
                   android:layout_height="130dp"
                   android:src="@drawable/logo">

               </ImageView>


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:fontFamily="casual"
                   android:text="LFA"
                   android:textColor="#ffff"
                   android:textSize="50sp"
                   android:textStyle="bold">

               </TextView>


           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginTop="210dp"
               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp">

               
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="180dp"
                   android:orientation="horizontal">


                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="160dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       app:cardCornerRadius="20dp">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:id="@+id/Drowning"
                               android:src="@drawable/drowning_img"
                               android:layout_centerInParent="true">
                           </ImageView>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/txtDrowning"
                               android:text="Drowning"
                               android:fontFamily="casual"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:layout_centerInParent="true"
                               android:layout_marginTop="10dp"
                               android:textColor="#000"
                               android:layout_below="@+id/Drowning">
                           </TextView>


                           <Button
                               android:id="@+id/btnDrowning"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@android:color/transparent"
                               tools:ignore="SpeakableTextPresentCheck">

                           </Button>



                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="160dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       app:cardCornerRadius="20dp">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:id="@+id/Fainting"
                               android:src="@drawable/fainting"
                               android:layout_centerInParent="true">
                           </ImageView>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/txtFinting"
                               android:text="Fainting"
                               android:textSize="20sp"
                               android:textStyle="bold"
                               android:fontFamily="casual"
                               android:layout_centerInParent="true"
                               android:layout_marginTop="10dp"
                               android:textColor="#000"
                               android:layout_below="@+id/Fainting">
                           </TextView>


                           <Button
                               android:id="@+id/btnFainting"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@android:color/transparent"
                               tools:ignore="SpeakableTextPresentCheck">

                           </Button>



                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="180dp"
                   android:orientation="horizontal">


                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="160dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       app:cardCornerRadius="20dp">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:id="@+id/Choking"
                               android:src="@drawable/choking"
                               android:layout_centerInParent="true">
                           </ImageView>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/txtChoking"
                               android:text="Choking"
                               android:textSize="20sp"
                               android:fontFamily="casual"
                               android:textStyle="bold"
                               android:layout_centerInParent="true"
                               android:layout_marginTop="10dp"
                               android:textColor="#000"
                               android:layout_below="@+id/Choking">
                           </TextView>


                           <Button
                               android:id="@+id/btnChoking"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@android:color/transparent"
                               tools:ignore="SpeakableTextPresentCheck">

                           </Button>



                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="160dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       app:cardCornerRadius="20dp">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:id="@+id/Burns"
                               android:src="@drawable/burns"
                               android:layout_centerInParent="true">
                           </ImageView>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/txtBurns"
                               android:text="Burns"
                               android:textSize="20sp"
                               android:fontFamily="casual"
                               android:textStyle="bold"
                               android:layout_centerInParent="true"
                               android:layout_marginTop="10dp"
                               android:textColor="#000"
                               android:layout_below="@+id/Burns">
                           </TextView>


                           <Button
                               android:id="@+id/btnBurns"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@android:color/transparent"
                               tools:ignore="SpeakableTextPresentCheck">

                           </Button>



                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="180dp"
                   android:orientation="horizontal">


                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="160dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       app:cardCornerRadius="20dp">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:id="@+id/BrokenBone"
                               android:src="@drawable/brokenbone"
                               android:layout_centerInParent="true">
                           </ImageView>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/txtBrokenBone"
                               android:text="Broken Bone"
                               android:textSize="20sp"
                               android:fontFamily="casual"
                               android:textStyle="bold"
                               android:layout_centerInParent="true"
                               android:layout_marginTop="10dp"
                               android:textColor="#000"
                               android:layout_below="@+id/BrokenBone">
                           </TextView>


                           <Button
                               android:id="@+id/btnBrokenBone"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@android:color/transparent"
                               tools:ignore="SpeakableTextPresentCheck">

                           </Button>



                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>

                   <androidx.cardview.widget.CardView
                       android:layout_width="0dp"
                       android:layout_height="160dp"
                       android:layout_weight="1"
                       android:layout_marginLeft="8dp"
                       android:layout_marginRight="8dp"
                       app:cardCornerRadius="20dp">


                       <RelativeLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent">

                           <ImageView
                               android:layout_width="80dp"
                               android:layout_height="80dp"
                               android:id="@+id/Bleeding"
                               android:src="@drawable/bleeding_img"
                               android:layout_centerInParent="true">
                           </ImageView>

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/txtBleeding"
                               android:text="Bleeding"
                               android:textSize="20sp"
                               android:fontFamily="casual"
                               android:textStyle="bold"
                               android:layout_centerInParent="true"
                               android:layout_marginTop="10dp"
                               android:textColor="#000"
                               android:layout_below="@+id/Bleeding">
                           </TextView>


                           <Button
                               android:id="@+id/btnBleeding"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:background="@android:color/transparent"
                               tools:ignore="SpeakableTextPresentCheck">

                           </Button>



                       </RelativeLayout>
                   </androidx.cardview.widget.CardView>


               </LinearLayout>

           </LinearLayout>




       </RelativeLayout>


   </ScrollView>

</RelativeLayout>

